{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app": ["./app"],
      "@api": ["./app/Api"],
      "@appTypes": ["./app/Types"],
      "@components": ["./app/Components"],
      "@constants": ["./app/Constants"],
      "@lang": ["./app/I18n"],
      "@router": ["./app/Router"],
      "@redux": ["./app/Redux"],
      "@themes": ["./app/Themes"],
      "@utils": ["./app/Utils"],
      "@screens": ["./app/Screens"],
      "@states": ["./app/States"],
      "@storage": ["./app/Storage"],

      "@app/*": ["./app/*"],
      "@api/*": ["./app/Api/*"],
      "@appTypes/*": ["./app/Types/*"],
      "@components/*": ["./app/Components/*"],
      "@constants/*": ["./app/Constants/*"],
      "@lang/*": ["./app/I18n/*"],
      "@router/*": ["./app/Router/*"],
      "@redux/*": ["./app/Redux/*"],
      "@themes/*": ["./app/Themes/*"],
      "@utils/*": ["./app/Utils/*"],
      "@screens/*": ["./app/Screens/*"],
      "@states/*": ["./app/States/*"],
      "@storage/*": ["./app/Storage/*"],

      "@root/*": ["./*"]
    }
  },
  "exclude": ["node_modules"]
}
