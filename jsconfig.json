{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app": ["./app"],
      "@router": ["./app/Router"],
      "@types": ["./app/Types"],
      "@constants": ["./app/Constants"],
      "@api": ["./app/Api"],
      "@utils": ["./app/Utils"],

      "@app/*": ["./app/*"],
      "@router/*": ["./app/Router/*"],
      "@types/*": ["./app/Types/*"],
      "@constants/*": ["./app/Constants/*"],
      "@api/*": ["./app/Api/*"],
      "@utils/*": ["./app/Utils/*"],
      "@root/*": ["./*"]
    }
  },
  "exclude": ["node_modules"]
}
