{
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "allowJs": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "baseUrl": ".",
    "pretty": true,
    "paths": {
      "@api": ["./app/Api"],
      "@app": ["./app"],
      "@appTypes": ["./app/Types"],
      "@components": ["./app/Components"],
      "@constants": ["./app/Constants"],
      "@lang": ["./app/I18n"],
      "@router": ["./app/Router"],
      "@redux": ["./app/Redux"],
      "@themes": ["./app/Themes"],
      "@utils": ["./app/Utils"],
      "@screens": ["./app/Screens"],
      "@states": ["./app/States"],
      "@storage": ["./app/Storage"],

      "@api/*": ["./app/Api/*"],
      "@app/*": ["./app/*"],
      "@appTypes/*": ["./app/Types/*"],
      "@components/*": ["./app/Components/*"],
      "@constants/*": ["./app/Constants/*"],
      "@lang/*": ["./app/I18n/*"],
      "@router/*": ["./app/Router/*"],
      "@redux/*": ["./app/Redux/*"],
      "@themes/*": ["./app/Themes/*"],
      "@utils/*": ["./app/Utils/*"],
      "@screens/*": ["./app/Screens/*"],
      "@states/*": ["./app/States/*"],
      "@storage/*": ["./app/Storage/*"],

      "@root/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    ".babelrc"
  ],
  "include": [
    "./app/**/*",
    "index.js"
  ],
  "typeRoots": ["./app/Types"]
}
